<?xml version="1.0"?>
<component name="org.nuxeo.correspondence.marianneService">

  <documentation>

    Used to configure the Marianne Service.

    @author
    <a href="mailto:nu@nuxeo.com">Nicolas Ulrich</a>
  </documentation>

  <implementation
    class="org.nuxeo.correspondence.marianne.service.MarianneServiceImpl" />

  <service>
    <provide interface="org.nuxeo.correspondence.marianne.service.MarianneService" />
  </service>

  <extension-point name="duration">

    <documentation>

      Used to register new durations.

      <code>
        <duration>
          <label>mail</label>
          <numberOfDays>5</numberOfDays>
        </duration>
      </code>

    </documentation>

    <object
      class="org.nuxeo.correspondence.marianne.service.DurationDescriptor" />

  </extension-point>

  <extension-point name="holidaysChecker">

    <documentation>

      Used to register Holiday Checker

      <code>
        <holidaysChecker
          class="org.nuxeo.correspondence.marianne.checker.CSVHolidaysChecker" />
      </code>

    </documentation>

    <object
      class="org.nuxeo.correspondence.marianne.service.HolidaysCheckerDescriptor" />

  </extension-point>

</component>
